@page
@using TrackMate.Areas.Identity.Pages.Account
@model LoginModel
@{
    ViewData["Title"] = "Login";
}

<style>

    .box {
        -webkit-box-shadow: 0px 0px 18px 2px rgba(89,89,89,0.45);
        box-shadow: 0px 0px 14px 2px rgba(89,89,89,0.45);
        min-height: 70vh;
        max-width:80vw;
        padding:50px;
        display:block;
        background-image: url("/images/about-background.png");
    }
    

</style>
<center>
    <div class="container-fluid" style="padding-top:30px;">
        <div class="row d-flex justify-content-center align-items-center box">
            <div class="col-lg-6 col-xl-5">
                <img src="/images/loginpage.webp"
                     class="img-fluid" alt="Sample image">

            </div>
            
            <div class="col-lg-6 col-xl-4 col-sm-6 offset-xl-1">
                @if (ViewData["Message"] != null)
                {
                    <p style="color:red">@ViewData["Message"]</p>
                }
                <div>
                    <h3 class="text-center">
                        Login
                    </h3>
                    <br />
                   
                    <form id="account" method="post">
 
                        <div class="form-group">
                          
                            <input type="text" class="form-control" name="userName" asp-for="Input.UserName" placeholder="Username">
                        </div>
                        <br />
                        <div class="form-group">
                            
                            <input type="password" class="form-control" name="password" asp-for="Input.Password" placeholder="Password">
                        </div>
                        <br />
                        <center>
                        <button type="submit" class="btn btn-primary btn-md mt-3">Submit</button>
                    </center>
                    </form>
                </div>
     
            </div>
        </div>
    </div>
</center>
